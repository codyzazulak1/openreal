// INVESTORS

@import 'variables';
#investors {

	.info h3 {
	  display: inline-block;
	}

	.contained-paragraphs {
	  margin-top: 1em;
	}

	.header {
		margin-top: 10px;
    font-size: 20px;
    font-weight: 400;
    padding-top: 8rem;
    padding-bottom: 8rem;
    background-image: linear-gradient(to bottom, rgba(45, 167, 226, 0.62) 40%, white 95%), url(<%= asset_path 'blue-grid.jpg'%>);
    background-position-x: -24px;
    background-size: contain;
    text-align: center;
	}

  #invest-form {
    span:hover {
      background-color: $primary-color;
      color: white;
    }
  
  }
}

@media screen and (min-width: 1060px){
  #investors {
    .cp-1{
    padding-left: 1.9em;
    }
    .cp-2{
      padding-left: 0.3em;
    }
  }
}

@media screen and (max-width: 886px) and (min-width: 425px){
  #investors {
    .info {
      .boxed {
        h3 {
          font-size: 1.4em;
        }
      }
    }
  }  
}

@media screen and (max-width: 380px){
  h1.s-view {
    font-size: 1.1rem;
  }
}

.invest-title {
	span {
		border-bottom: 2px solid $primary-color;
	  display: inline-block;
	  height: 33px;
	  font-size: 28px;
	}
}

#invest-bar {
	background-image: url(<%= asset_path 'whiteGrid.png'%>);
  background-size: 520px;
	margin-top: 30px;

	.invest-progress {
		margin-top: -30px;
    margin-bottom: 20px;
	}

	div:nth-child(2){
	 	height: 30px;
    border: 1px solid grey;
    margin: auto;
    border-top-left-radius: 5px;
    margin-bottom: -4px;
    border-top-right-radius: 5px;
    width: 25px;
    background-color: #a4e125;
	}
	div:nth-child(3){
    position: relative;
	 	height: 100px;
    margin: auto;
    border-radius: 100%;
    width: 100px;
    font-size: 15px;
    padding-top: 20px;
    text-align: center;
    z-index: 1;
    border: 4px solid #a4e125;
    background-color: white;
    span {
    	font-size: 35px;
    	line-height: smaller;
    }
	}
	div:nth-child(4){
		height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    border-bottom: 1px dashed rgb(255, 255, 255);
   // z-index: -1;
    position: relative;
    margin-top: -2px;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(5){
		height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    border-bottom: 1px dashed white;
    z-index: -1;
    margin-top: 0px;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(6){
		height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    border-bottom: 1px dashed white;
    z-index: -1;
    margin-top: 0px;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(7){
		height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    border-bottom: 1px solid grey;
    z-index: -1;
    margin-top: 0px;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(8){
	height: 80px;
    width: 200px;
    border: 4px solid $primary-color;
    font-size: 15px;
    background-color: white;
    padding-top: -1px;
    margin: auto;
    margin-top: -1px;

    span {
    	font-size: 30px;
    }
	}
	div:nth-child(9){
    height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    z-index: -1;
    margin-top: -0px;
    border-bottom: 1px dashed white;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(10){
		height: 50px;
    margin: auto;
    border-left: 1px solid grey;
    border-right: 1px solid grey;
    z-index: -1;
    margin-top: -0px;
    width: 25px;
    background-color: $primary-color;
	}
	div:nth-child(11){
	width: 280px;
    margin: auto;
    height: 105px;
    border: 4px solid $primary-color;
    padding-top: 0px;
    background-color: white;
    font-size: 20px;

    span {
    	font-size: 40px;
    }
	}
	div:nth-child(12){
		height: 20px;
    width: 25px;
    background-color: #68c0ea;
    border: 1px solid grey;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    margin: auto;
    border-top: none;
	}
}

#investors-contact {
	#form-signup {
		text-align: center;
		margin-bottom: 0;
		margin-top: 0;
	}
}
.form-start {
	.fields {
    input {
      border-radius: 0!important;
    }
  }
	.first_name_inv {
		padding: 0 12px 0 0;
		display: inline-block;
		border-radius: 0;
	}

	.last_name_inv {
		padding: 0 0 0 0px;
		display: inline-block;
		border-radius: 0;
	}
	#success {
		display: none;
		p {
		 font-weight: 200;
		 font-size: 1em;
		}
		img {
			width: 4em;
		}
	}

}

.offer-link {
	margin-bottom: 1.5em;
  padding: 5px 190px;
  border-radius: 0!important;

}

.email {
	text-align: left;
}

@media screen and (min-width: 1024px){
	.form-start {
		.name_fields_inv {
			padding: 0 50px;
		}
	}

	.email {
		padding: 0 50px;
	}
}
@media screen and (max-width: 1023px){
	.agent_landingpage #investors-form-start {
	 margin-top: 0!important;
	}

	.form-start .first_name_inv {
		padding: 0!important;
	}
}

