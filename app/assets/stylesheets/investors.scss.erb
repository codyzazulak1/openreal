// INVESTORS

@import 'variables';
#investors {

	.info h3 {
	  display: inline-block;
	}

	.contained-paragraphs {
	  margin-top: 1em;
	}

	.header {
		margin-top: 10px;
    font-size: 20px;
    font-weight: 400;
    padding-top: 8rem;
    padding-bottom: 8rem;
    background-image: linear-gradient(to bottom, rgba(45, 167, 226, 0.62) 40%, white 95%), url(<%= asset_path 'blue-grid.jpg'%>);
    background-position-x: -24px;
    background-size: contain;
    text-align: center;
	}
}
.invest-title {
	span {
		border-bottom: 2px solid $primary-color;
	  display: inline-block;
	  height: 33px;
	  font-size: 28px;
	}

}