    .listing-badge {
      position: absolute;
      top: 0;
      right: 0;
      padding: 0.5rem 1.25rem;

      background-color: $primary-color;
      text-align: center;
      color: $white;

      span {
        display: table-cell;
        vertical-align: middle;
