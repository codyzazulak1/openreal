// navbar
nav#navbar {
  border-bottom: 1px solid $border-color;
  box-shadow: 0 0px 2px rgba(0, 0, 0, 0.2);
  padding-bottom:0;
  position: relative;
  z-index: 10;

  #logo {
    font-family: Pacifico, "Helvetica Neue", "Lucida Grande", Arial, Verdana, sans-serif;
    color: deepskyblue;
    font-size: 1.25em;
    padding: 0;

    img {
      height: 1.25rem;
    }
  }

  .top-bar {
    background-color: $white;

    ul.menu {
      background-color: $white;
    }

    ul.nav-menu {
      
      li {
        margin: 0 1rem;
        display: inline-block;
        vertical-align: text-top;
        font-family: 'Questrial', sans-serif;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 2px;
        text-transform: uppercase;
      }

      li>ul#nav-dropdown {
        top: 55px;
        background-color: $white;
        padding: 0;
        margin: 0;

        >li {
          margin: 0;
          display: block;
          
          >a{
            width: 100%;
            padding: 0.5rem 1rem;
            display: block;

            &:hover {
              background-color: $light-gray;
            }
          }
        }
      }

      a {
        color: $nav-anchor;
        line-height: 1.25rem;
        padding: 0.7rem 0;
        position: relative;
      }

      >li.is-dropdown-submenu-parent>a {
        padding-right: 0;
      }
      
      >li>a:after,
      >li.is-dropdown-submenu-parent>a:after {
        -webkit-transition: all 0.15s ease;
        -moz-transition: all 0.15s ease;
        -o-transition: all 0.15s ease;
        transition: all 0.15s ease;
        content: "";
        position: absolute;
        bottom: 5px;
        height: 3px;
        left: 0;
        right: 0;
        background-color: $nav-hover;
        // background-color: $light-yellow;
        transform: translateY(6px);
        opacity: 0;
      }

      >li>a:hover:after,
      >li.is-dropdown-submenu-parent>a:hover:after {
        transform: translateY(0);
        opacity: 1;
      }

      >li>a.active:after {
        background-color: $primary-color;
        transform: translateY(0);
        opacity: 1;
      }

      >li.is-dropdown-submenu-parent>a:after {
        border: none;
        width: initial;
        margin: 0;
        top: inherit;
      }
    }
  }      
}


footer {
  background-color: $primary-color;
  // background-color: darken($primary-color, 10%);
  color: $light-gray;
  padding: 1.5rem 0 0;
  position: relative;
  z-index: 9;

  .top {
    // background-color: darken($primary-color, 10%);
    background-color: $primary-color;
  }

  .bottom {
    background-color: darken($primary-color, 5%);
  }

  .small-6 {
    margin-bottom: 1.5rem;
  }

  h5 {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.9px;
  }

  h6 {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.2px;
    margin: 0;
    line-height: 3rem;
  }

  ul {
    list-style-type: none;
    margin: 0;

    li>a {
      color: $light-gray;
      font-weight: 100;
      letter-spacing: 0.1px;

      &:hover,
      &:focus {
        color: $medium-gray;
      }
    }
  }
}




.similar-listings {
  background-color: $white;
  margin-bottom: 2rem;
  padding: 1rem 0;
}

.similar-listings,
.new-listings
 {

  &:hover {
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .listing-item {
    position: relative;

    &:hover {
      cursor: pointer;
    }

