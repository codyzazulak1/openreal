@import 'variables';

// modal for map section

#gmap {
    height: 50vh;
    z-index: 1;
}

#floating-panel {
  position: absolute;
  top: 10px;
  left: 25%;
  z-index: 5;
  background-color: #fff;
  padding: 5px;
  border: 1px solid #999;
  text-align: center;
  font-family: 'Roboto','sans-serif';
  line-height: 30px;
  padding-left: 10px;
}
#offer-container {
	position: relative;
	height: 5em;

	p {
		font-size: initial;
	}
	.map-link {
		display: none;
	}	
}
