/* hero section */
#hero {
  height: 600px;
  position: relative;
  padding: 0;

  .hero-bg {

    background: linear-gradient(
      rgba($primary-color, 0.65), 
      rgba($primary-color, 0.65)
    ),
    url(<%= asset_path 'front.jpg' %>) no-repeat center center;
    background-size: cover;
    height: 100%;
  }

  .intro {
    width: 100%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%); 
  }

  h1 {
    color: $white;
    font-size: 3rem;
    line-height: 1.5em;
    font-weight: 500;
    text-align: center; 
  }

  p {
    color: $white;
    font-weight: 300;
    text-align: center;
    font-size: 1.5rem;
    line-height: 1.5;
    // margin-bottom: 2rem; 
  }

  .arrow {
    // opacity: 0;
    position: absolute;
    margin-left: -15px;
    left: 50%;
    bottom: 50px;
    transform-origin: 50% 50%;
    transform: translate3d(-50%, -50%, 0);
    display: block;
    opacity: .8;

    &:before,
    &:after {
      background: #fff;
      content: '';
      display: block;
      height: 3px; 
      position: absolute;
      top: 0;
      left: 0;
      width: 30px;
    }

    &:before {
      transform: rotate(45deg) translateX(-20%);
      transform-origin: top left;
    }

    &:after {
      transform: rotate(-45deg) translateX(20%);
      transform-origin: top right;
    }

    span {
      position: absolute;
      opacity: 0;
      transform: translate(-23%, -23%);
      transform-origin: center;
    }
  }
}
