/* hero section */
#hero {
  height: 600px;
  position: relative;
  padding: 0;

  .hero-bg {

    background: linear-gradient(rgba(0, 0, 0, 0.135), rgba(0, 0, 0, 0.135)), url(<%= asset_path 'front_2.jpg' %>);
    height: 100%;
   //margin-top: -2.2em;

  }

  .intro {
    width: 100%;
    position: absolute;
    top: 58%;
    transform: translateY(-50%); 
    padding-left: 5em;

    .second-row-margin{
      .search-bar {
        padding-right: 5em;
      }
    }

    .intro-column2 {

      margin-top: 0.9em;

      p:first-child {
        color: white;
        text-align: right;
        padding-right: 2.5em;
        line-height: 1px;
        font-weight: 600;
      }

      p:nth-child(2){
        text-align: right;
        padding-right: 2.4em;
        margin-bottom: 29px;
      }

      a {
        border: 2px solid white;
        color: white;
        padding: 1em;
        border-radius: 5px;
        margin-left: 75px;
        font-size: 17px;
      }
    }
  }

  h1 {
    color: $white;
    font-size: 3rem;
    line-height: 1.5em;
    font-weight: 500;
    text-align: left; 
   
  }

  h1:first-child {
    line-height: 25px;
    span {
     background-color: #68c0ea;
     padding: 5px 0.1em;
    }
  }
  h1:nth-child(2){
    margin-bottom: 2.5em;

  }

  .search-bar {

    #addressInput {
     // margin-top: 14em;
      height: 50px;
      border-radius: 0;
      margin-bottom: 0;
    }

    .input-div {
      background-color: rgba(0, 0, 0, 0.47);
      border: 1px solid white;
      padding: 0.5em 0.5em;
      padding-top: 1em;
      margin-right: 0em;
    }

    p{
      text-align: left;
      font-size: 21px;
    }
    p:first-child {
      color: #68c0ea;
      line-height: 1px;
      font-weight: 700;
      
    }
  }

  p {
    color: $white;
    font-weight: 300;
    text-align: center;
    font-size: 1.5rem;
    line-height: 1.5;
    // margin-bottom: 2rem; 
  }

  .arrow {
    // opacity: 0;
    position: absolute;
    margin-left: -15px;
    left: 50%;
    bottom: 50px;
    transform-origin: 50% 50%;
    transform: translate3d(-50%, -50%, 0);
    display: block;
    opacity: .8;

    &:before,
    &:after {
      background: #fff;
      content: '';
      display: block;
      height: 3px; 
      position: absolute;
      top: 0;
      left: 0;
      width: 30px;
    }

    &:before {
      transform: rotate(45deg) translateX(-20%);
      transform-origin: top left;
    }

    &:after {
      transform: rotate(-45deg) translateX(20%);
      transform-origin: top right;
    }

    span {
      position: absolute;
      opacity: 0;
      transform: translate(-23%, -23%);
      transform-origin: center;
    }
  }
}

