@import 'variables';


/****************
 *              *
 * landing page *
 *              *
 ****************/

#listing-banner {
  background-color: $panel-bg;
  padding: 3rem 0;

  .orbit {
    overflow: hidden;
    height: 300px;

    .orbit-image {
      // display: block;
    }
  }

  .cta {
    background-color: $white;
    padding: 1rem;
    height: 300px;
    display: table;

    h2 {
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.75;
      margin-bottom: 2rem;
    }
  }

}

.v-align {
  display: table-cell;
  vertical-align: middle;
}


/* hero section */
#hero {
  height: 600px;
  position: relative;
  padding: 0;

  .hero-bg {

    background: linear-gradient(
      rgba($primary-color, 0.65), 
      rgba($primary-color, 0.65)
    ),
    url(<%= asset_path 'front.jpg' %>) no-repeat center center;
    background-size: cover;
    height: 100%;
  }

  .intro {
    width: 100%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%); 
  }

  h1 {
    color: $white;
    font-size: 3.5rem;
    line-height: 1.5em;
    font-weight: 500;
    text-align: center; 
  }

  p {
    color: $white;
    font-weight: 300;
    text-align: center;
    font-size: 1.5rem;
    line-height: 1.5;
    // margin-bottom: 2rem; 
  }

  .arrow {
    // opacity: 0;
    position: absolute;
    margin-left: -15px;
    left: 50%;
    bottom: 50px;
    transform-origin: 50% 50%;
    transform: translate3d(-50%, -50%, 0);
    display: block;
    opacity: .8;

    &:before,
    &:after {
      background: #fff;
      content: '';
      display: block;
      height: 3px; 
      position: absolute;
      top: 0;
      left: 0;
      width: 30px;
    }

    &:before {
      transform: rotate(45deg) translateX(-20%);
      transform-origin: top left;
    }

    &:after {
      transform: rotate(-45deg) translateX(20%);
      transform-origin: top right;
    }

    span {
      position: absolute;
      opacity: 0;
      transform: translate(-23%, -23%);
      transform-origin: center;
    }
  }


}

// hide google maps logo
.hdpi.pac-logo:after {
  // display: none;
}

/* why section */
#why {
  .points {
    margin: 1rem 0;

    img {
      // width: 100%;
      width: 5rem;
      height: 5rem;
      margin: 0 auto 1rem;
      display: block;
    }

    .lead {
      line-height: 1.125;
      font-weight: 200;
      letter-spacing: normal;
      font-size:1.5rem;
      // font-family: "Myriad Set Pro", "Helvetica Neue", "Helvetica";
    }

    .subheader {
      margin: 0;
      line-height: 1.5;
    }
  }
}

/* new listings */
#new-listings {
  .listing-item {
    margin-bottom: 1rem;
  }
}

/* districts */
.card {
  height: 50vh;
  margin: 1rem 0;
  overflow: hidden;
  position: relative;

  &:hover .card-bg {
    transform: scale(1.2);
    -moz-transform: scale(1.2);
    -webkit-transform: scale(1.2);
    -o-transform: scale(1.2);
    -ms-transform: scale(1.2); /* IE 9 */
  }

  .card-bg {
    height: 100%;
    background-size: cover;
    transition: all 1s ease;
    -moz-transition: all 1s ease;
    -ms-transition: all 1s ease;
    -webkit-transition: all 1s ease;
    -o-transition: all 1s ease;
  }

  container {
    display: block;
    text-align: center;
    width: 100%;
    height: 100%;
    color: $white;
    cursor: default;

    font-weight: 200;
    font-family: Circular,"Helvetica Neue";
    font-size: 1.75rem;
    letter-spacing: 1px;
    position: absolute;
    top: 0;

    background: linear-gradient(
      rgba($black, 0.45), 
      rgba($black, 0.45)
    );

    &:hover {
      color: $white;
    }

    span {
      color: $white;
      font-weight: 200;
      font-family: Circular, "Helvetica Nueue";
      font-size: 1.75rem;
      letter-spacing: 1px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      

      &:hover {
        color: $white;
      }
    }
  }
}