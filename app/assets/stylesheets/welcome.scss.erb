/* districts */
.card {
  height: 50vh;
  margin: 1rem 0;
  overflow: hidden;
  position: relative;

  &:hover .card-bg {
    transform: scale(1.2);
    -moz-transform: scale(1.2);
    -webkit-transform: scale(1.2);
    -o-transform: scale(1.2);
    -ms-transform: scale(1.2); /* IE 9 */
    -webkit-filter: blur(5px);
  }

  .card-bg {
    height: 100%;
    background-size: cover;
    transition: all 1s ease;
    -moz-transition: all 1s ease;
    -ms-transition: all 1s ease;
    -webkit-transition: all 1s ease;
    -o-transition: all 1s ease;
  }

  container {
    display: block;
    text-align: center;
    width: 100%;
    height: 100%;
    color: $white;
    cursor: default;

    font-weight: 200;
    font-family: Circular,"Helvetica Neue";
    font-size: 1.75rem;
    letter-spacing: 1px;
    position: absolute;
    top: 0;

    background: linear-gradient(
      rgba($black, 0.45), 
      rgba($black, 0.45)
    );

    .coming-soon {
      display:none;
      font-size: 1.75rem;
    }

    &:hover .city-name {
      color: $white;
      -webkit-filter: blur(5px);
    }
    &:hover .coming-soon{
      display: inline;
      color:white;
      font-family: Circular,"Helvetica Neue";
      font-size: 0.8em;
      transition: all 2s ease-in-out;
      padding: 3px;
    }



    span {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      

      &:hover {
        color: $white;
      }
    }
  }
  @media screen and (max-width: 450px){
    container {

      span {
        position: relative;
        top: 25%;
        left: 0;
        transform: translate(0,-50%);
        vertical-align: -webkit-baseline-middle;
      }
      .coming-soon {
        display: block;
        color: white;
        font-family: Circular, "Helvetica Nueue";
        font-size: 0.8em;
        transition: all 2s ease-in-out;
        padding: 3px;
      }
      &:hover .coming-soon{
        display: none;
        color:white;
        font-family: Circular,"Helvetica Neue";
        font-size: 0.8em;
        transition: all 2s ease-in-out;
        padding: 3px;
      }
      &:hover .city-name {
        color: $white;
        -webkit-filter: blur(0px);
      }
    }
  }
  
}
