  }

  .arrow {
    // opacity: 0;
    position: absolute;
    margin-left: -15px;
    left: 50%;
    bottom: 50px;
    transform-origin: 50% 50%;
    transform: translate3d(-50%, -50%, 0);
    display: block;
    opacity: .8;

    &:before,
    &:after {
      background: #fff;
      content: '';
      display: block;
      height: 3px; 
      position: absolute;
      top: 0;
      left: 0;
      width: 30px;
    }

    &:before {
      transform: rotate(45deg) translateX(-20%);
      transform-origin: top left;
    }

    &:after {
      transform: rotate(-45deg) translateX(20%);
      transform-origin: top right;
    }

    span {
      position: absolute;
      opacity: 0;
      transform: translate(-23%, -23%);
      transform-origin: center;
    }
  }
