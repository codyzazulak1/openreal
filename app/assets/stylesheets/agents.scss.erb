//Agents

@import 'variables';

.agent_landingpage {

	min-height: calc(100vh - 266px);
	.header {
	  margin-top: 60px;
		font-size: 20px;
		font-weight: 400;
		padding-top: 8rem;
		padding-bottom: 8rem;
		background-image: linear-gradient(to bottom, rgba(45, 167, 226, 0.62) 40%, rgb(255, 255, 255) 95%), url(<%= asset_path 'agents_page.jpg' %>);
		background-size: cover;

		text-align: center;
		//border: 1px solid grey;
	//	background-position-y: 857px;
  //  background-color: black;
   // background-blend-mode: luminosity;

		h1 {
    background-color: #68c0ea;
    display: inline-block;
    padding: 1rem 3rem;
    color: white;	
		}

		.bold-span {
	    letter-spacing: 3px;
	    color: #f5f5f5;
	    border: 1px solid;
	    padding: 2px;
	    border-radius: 4px;
		}
		.display-inline-block {
			display: inline-block;

		}

		h5 {
    font-weight: 400;
    text-shadow: 1px 1px rgba(0, 0, 0, 0.27);
    color: white;
    font-size: 1.45rem;


		}

		.small-12:last-child {
			padding-top: 5rem;

			span {
				padding: 1rem 5rem;
		    background-color: #f5f5f5;
		    color: rgb(104, 192, 234);
		    font-weight: 500;
		    border: 4px solid rgb(104, 192, 234);
			}
		}

	}

	.info {

		
		h6 {
			display: inline-block;
			text-transform: uppercase;
			font-weight: 200;
			font-size: smaller;
		}
		h3 {
			font-weight: 300;
			
		}

		.boxed {
			text-align: -webkit-auto;
			display: inline-block;

			img {
				//display: inline-block;
				max-width: 50px;
			}
		}

		.contained-paragraphs {
	    font-weight: 100;
	    text-align: justify;
	    font-size: 1rem;

	    .sole-paragraph {
	    	margin-bottom: 0.5rem;
	    }

	    .small-print {
	    	line-height: inherit;
	    	color: grey;
	    }

	    span {
	    	display: block;
    		margin-top: 1rem;

    		a {
					text-decoration: none;
			    border: 3px solid #68c0ea;
			    font-size: 16px;
			    font-weight: 300;
			    padding: 0.5rem 0.5rem;
	    	}
	    }

		}

	}

	.accepting-cities {
	//	background-color: whitesmoke;
		img {
			vertical-align: center;
			width: 3rem;
		}
		.city-grid {
			//color: #52b7e7;
			//background-color: #52b7e7;
	 		text-align: center;
	 		overflow: hidden;
	 		padding: 30px 10px;
		 // text-transform: uppercase;
		//  letter-spacing: 2px;
		//  color: #eceef0;
		  margin-top: -19px;

		  h3 {
		  	font-weight: 300;
		  }
		}
		.bkg-white {
			background-color: white;
		}
	}

	.form-start {
		margin-bottom: 4em;
		.form-title {
			color: #68c0ea;
		}
		.form-content {
	    border: 4.5px solid #68c0ea;
    	box-sizing: border-box;
    	box-shadow: 1px 1px 27px;
    	margin-top: -2.5em;

    	#options-tag {
    	  // width: 81%;
    	}

			img {
				vertical-align: center;
				width: 3rem;
			}

			h6 {
				//font-weight: 100;
				margin-bottom: 2rem;
			}

			h3 {
				//padding-top: 10px;
				//color: #68c0ea;
				margin-top: 2rem;
				display: inline-block;

				h3.form-instantly {
					display: inline-block;
			    border-bottom: 1px solid black;
			    color: #68c0ea;
			    font-weight: 500;
	        height: 44px;
    			font-size: 38px;
				}
			}

			#success {
				display: none;
				p {
				 font-weight: 200;
				 font-size: 1em;
				}
				img {
					width: 4em;
				}
			}

			.name_fields {

				.first_name,
				.last_name {
					display: inline-block;
				}
				label {
					text-align: left;
					padding: 0 30px;
				}
			}

			.company_name {
				text-align: left;
				padding: 0px 30px;
			}

			.actions {
				input[type="submit"]{
				  font-size: 1.2rem;
				  margin-bottom: 1em;
				}
			}

	}

		.agent-form {
			.field {
		    text-align: initial;
		   // display: inline-block;

		    label {
		    	font-size: large;
		    	font-weight: 100;
		    	color: #484848;
		    }
		  .reveal {
	    	display: none;
	    	top: 0;
	    	margin: 0.5em 0;
    		width: 100%;
    		min-height: 0;
	    }
			}
			.agent-submit {
				input {
					border-radius: 0px;
					line-height: 1.5;
		    	font-size: inherit;
			    margin: 1em 0px;
			    width: 100%;
	    	}

	    }
		}
	}

	@media screen and (max-width: 450px){
		.header {
			.small-12:last-child {
				span {
					padding: 0.5rem 3rem;
				}
			.display-inline-block {
					display: block;
				}

			}
		}

		.info {
			h3 {
				font-weight: 400;
			}
			.boxed {
				margin-bottom: 1.5rem;
			}
			.columns:nth-child(1),
			.columns:nth-child(2) {
				margin-bottom: 2rem;
			}

			.contained-paragraphs span a {
				margin-left: 25%;
			}
		}
	}

	@media screen and (max-width: 639px){
		.form-start {
			.agent-form {
				.reveal {
					font-size: 12px;
					padding: 0 0.7em;
					height: 2.5em;
				}
			}

			.form-content {
				border: none;
		    box-sizing: border-box;
		    box-shadow: none;
			}

		}
	}
}

