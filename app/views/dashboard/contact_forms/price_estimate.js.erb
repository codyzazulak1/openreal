setTimeout(function(){
	$('.loader > p').remove();
	$('.loader').hide();
	
	$('#e-url').css('background-color', '#68c0ea');
	$('#e-url').css('pointer-events', 'visible');
	$('.map-link').show();
	$('#offer-container').height('auto');
	$('#offer-container').append('<h5 style="text-align: center; font-weight: 500">' + '<%= escape_javascript(@contact_property.address_name)%>' + '</h5>')

	$('#offer-container').append('<p>Total value today: ' + '<%= escape_javascript(number_to_currency(@offer_info[:total_value_today], precision: 0).to_s)%>')

	$('#offer-container').append('<p>' + '<%= escape_javascript(@offer_info[:assessed_date])%> for ' + '$<%= escape_javascript(@offer_info[:assessed_date_value].to_s)%>.' + '</p>');
	<% unless @offer_info[:land_value] == '$0' %>	
		$('#offer-container').append('<p>Land value: '+ '<%= escape_javascript(number_to_currency(@offer_info[:land_value], precision: 0).to_s)%>' + '</p>')
	<% else %>
		$('#offer-container').append('<p>Land value not available.</p>')							
	<% end %>

	<% unless @offer_info[:building_value] == '$0' %>
		$('#offer-container').append('<p> Building value: '+ '<%= escape_javascript(number_to_currency(@offer_info[:building_value], precision: 0).to_s)%>'  + '</p>')
	<% else %>
		$('#offer-container').append('<p>Building value not available.</p>')
	<% end %>
	$('#e-url').attr('href', '<%= escape_javascript(@offer_info[:url])%>')
	
}, 2000)

