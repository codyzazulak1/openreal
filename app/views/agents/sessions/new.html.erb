<div id="admin_login" class="agent_login" style="margin-top: 60px;">
  <h3>Log in</h3>
  <p class="p-the-image">
    <%= image_tag("logo_med.png") %>
  </p>

  <%= form_for(:agent, url: session_path(:agent)) do |f| %>
    <div class="field">
      <%#= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Please enter your e-mail' %>
    </div>

    <div class="field">
      <%#= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in",  class: 'x' %>
    </div>
  <% end %>
    <div class="extra-step">
      <p>Not registered yet?</p>
       <button><a href="/agents">Sign up</a></button>
    </div>
   

</div>

