<%- title "Sell Your Home"%>
<div class="columns small-12">
<%= image_tag('sales_page/page4.svg', id: 'page_svg_4') %>
<div>Step 4 of 7</div> 
<h3>Kitchen</h3>
<br />
</div>

<div class="container">

	<%= fp.fields_for :property_upgrades, @property_upgrades do |pu|%>
	<div class="columns small-12 medium-11">
	<label> What is the condition of your kitchen?</label>

	<% @kc.each do |feat|%>

		<% if ((!(session[:kitch].blank?) && session[:kitch]["kc"].include?((feat.id).to_s)) ) %>
			<%= radio_button_tag "kitchen[kc]", feat.id, true,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      }  %>
		<% else %>
			<%= radio_button_tag "kitchen[kc]", feat.id, false,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      } %>
		<% end %>

		<%= label_tag feat.name , feat.name ,style: "display: inline;" %></br>

	<% end %>
	<br/>
	</div>
	<div class="columns small-12 medium-11">
	<label>Which countertops does your kitchen have?</label>
	<% @kco.each do |feat|%>
	
		<% if (!(session[:kitch].blank?) && (session[:kitch]["kco"].include?((feat.id).to_s))) %>
			<%= radio_button_tag 'kitchen[kco]', feat.id, true,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      }  %>
		<% else %>
			<%= radio_button_tag 'kitchen[kco]', feat.id, false,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      } %>
		<% end %>

		<%= label_tag feat.name , feat.name , style: "display: inline;" %></br>

	<% end %>

	<br/>
	</div>
	<div class="columns small-12 medium-11">
	<label> What kind of kitchen appliances do you have?</label>
	<% @ka.each do |feat|%>
		
		<% if (!(session[:kitch].blank?) && (session[:kitch]["ka"].include?((feat.id).to_s))) %>
			<%= radio_button_tag 'kitchen[ka]', feat.id, true,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      }  %>
		<% else %>
			<%= radio_button_tag 'kitchen[ka]', feat.id, false,  data: {
        'validation' => "required",
        'validation-error-msg' => "One option selected required."
      }  %>
		<% end %>
		<%= label_tag feat.name, feat.name, style: "display: inline;"  %></br>

	<% end %>

	<br/>
	</div>
	<div class="columns small-12 medium-11 end">
	<label> Does your kitchen have any of the following features?</label>
	<% @ke.each do |feat|%>

		<% if (!(session[:kitch].blank?) && (session[:kitch]["ke"].include?((feat.id).to_s))) %>
						<%= check_box_tag 'kitchen[ke][]', feat.id, true, id: "kitchen_#{feat.id}" ,class: 'cb-sell' %>
		<% else %>
						<%= check_box_tag 'kitchen[ke][]', feat.id, false, id: "kitchen_#{feat.id}", class: 'cb-sell' %>		
		<% end %>
		<%= label_tag feat.name, feat.name, style: "display: inline;"  %></br>

	<% end %>

	<% end %>
	</div>
</div>

