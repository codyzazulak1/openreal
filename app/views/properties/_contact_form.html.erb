<div>Step 4</div>
<h3>How can we contact you?</h3>

<%= fp.fields_for :contact_form, @contact do |cf| %>
  <div>
    <%= cf.label :name %>
    <%= cf.text_field :name %>
  </div>

  <div>
    <%= cf.label :email %>
    <%= cf.email_field :email, data: { validation: "required" } %>
  </div>

  <div>
    <%= cf.label :phone %>
    <%= cf.text_field :phone %>
  </div>

  <div>
    <%= cf.label :notes %>
    <%= cf.text_field :notes %>
  </div>
<%end%>