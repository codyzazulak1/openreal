<%- title "Sell Your Home"%>
<div class="columns">
<%= image_tag('sales_page/img-1')%>
<div>Step 1 of 7</div> 
<h3>Start with the basics</h3>
</div>
<div id="addressForm">
<br>

  <%= fp.fields_for :address do |ffa| %>
    <div class="columns small-12 medium-9">
      <%= ffa.label :address_first %>
      <%= ffa.text_field :address_first, id: "addressInput", data: {
        'validation' => "required",
        'validation-error-msg' => "You did not enter an address"
      }, placeholder: "Street address" %>
    </div>
    <div class="columns small-12 medium-9">
      <%= ffa.label :address_second %>
      <%= ffa.text_field :address_second, id: "addressSecond", placeholder: "Apartment, Suit, Unit, Floor (Optional)" %>
    </div>
    <div class="columns small-12 medium-9">
      <%= ffa.label :city %>
      <%= ffa.text_field :city, id: "addressCity", data: {
        'validation' => "required",
        'validation-error-msg' => "You did not enter a city"
      } %>
    </div>
    <div class="columns small-12 medium-9">
      <%= ffa.label :postal_code %>
      <%= ffa.text_field :postal_code, id: "addressPostal", data: {
        'validation' => "required",
        'validation-error-msg' => "You did not enter a postal code"
      } %>
    </div>
    <div>
      <%= ffa.hidden_field :latitude, id: "addressLat" %>
      <%= ffa.hidden_field :longitude, id: "addressLng" %>
    </div>
	<% end %>
</div>
