<%- title "Sell Your Home"%>

<%= image_tag('sales_page/img-2')%>
<div>Step 2 of 7</div>
<h3>Tell us about your home</h3>

<div>
  <%= fp.label :floor_area %>
  <%= fp.text_field :floor_area, data: { 'validation' => "required" }, placeholder: "#,### sqft" %>
</div>

<div>
  <%= fp.label :stories %>
  <%= fp.select :stories, options_for_select([1,2,3,4,5,6]), {data: { 'validation' => "required" }}, {prompt: true}%>
</div>

<div>
  <%= fp.label :bedrooms %>
  <%= fp.select :bedrooms,  options_for_select([1,2,3,4,5,6,7]), {data: { 'validation' => "required" }}, {prompt: true} %>
</div>

<div>
  <%= fp.label :bathrooms %>
  <%= fp.select :bathrooms, options_for_select([1,2,3,4,5,6,7]), {data: { 'validation' => "required" }}, {prompt: true} %>
</div>

<div>


	<%= fp.fields_for :property_upgrades, @property_upgrades do |pu|%>
	<label> Do you have a pool?</label>
	<% @pool.each do |feat|%>

		<%= radio_button_tag 'property[property_upgrades_attributes][upgrade_id][]', feat.id %>

		<%= label_tag feat.name %></br>

	<% end %>
		
	<label>Does your home have any of the following?</label>

	<% @other.each do |ot| %>

		<%= check_box_tag 'property[property_upgrades_attributes][upgrade_id][]', ot.id -%>
					
		<%= label_tag ot.name %><br/ >

	<% end %>
	
<% end %>

