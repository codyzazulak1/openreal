<div id="admin_login">
  <h3>Log in</h3>
  <p class="p-the-image">
    <%= image_tag("logo_med.png") %>
  </p>

  <%= form_for(:admin, url: session_path(:admin)) do |f| %>
    <div class="field">
      <%#= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Please enter your e-mail' %>
    </div>

    <div class="field">
      <%#= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in",  class: 'x' %>
    </div>
  <% end %>
  
</div>