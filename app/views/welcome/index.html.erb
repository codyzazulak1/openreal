<script type="text/javascript">
  scrollIt();
  grabCompanyChosen();
  redirectToFaq();


  $(document).ready(function(){
    if (($( window ).width() > 639) && (sessionStorage.getItem('popup') == null)){
      setTimeout(function(){
        $('#actionModalHome').foundation('open');
        sessionStorage.setItem('popup', 1)
        $('.close-reveal-modal').click(function(){
          $('#actionModalHome').foundation('close');
        })
      },1000)      
    }
    else if (($(window).width() < 640) && (sessionStorage.getItem('popup') == null)){
      $('#actionModalHomeSmall').foundation('open');
      sessionStorage.setItem('popup', 1)
    };
  })


  
</script>



