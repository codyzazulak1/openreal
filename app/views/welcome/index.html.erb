<%- title "Sell Your Home Instantly!" %> 
<!--hero-->
<section class="" id="hero">
  <div class="hero-bg"></div>
  <div class="intro">
    <div class="row expanded">
      <div class="small-9 medium-8 small-centered medium-centered columns">
        <h1>Welcome to OpenReal</h1>
        <p>Sell your home to OpenReal and eliminate the hassle of listings, showings and months of uncertainty.</p>
      
        <!--Search Bar-->
        <div class="search-bar">
          <!-- Search field -->
          <%= form_tag (properties_sell_path), id: "addressForm" do %>
            <div>
              <input type="text" id="addressInput" placeholder="Enter your home address" name="addressInput">
               <!--  <div>
                  <a href="#">Get your
                </div> -->
              <input type="hidden" name="addressFirst" id="addressFirst">
              <input type="hidden" name="addressSecond" id="addressSecond">
              <input type="hidden" name="addressCity" id="addressCity">
              <input type="hidden" name="addressPostal" id="addressPostal">
              <input type="hidden" name="addressLat" id="addressLat">
              <input type="hidden" name="addressLng" id="addressLng">
              <input type="submit" class="hide">

              <!-- <div class="input-group-button">
                <button class="button">Get&nbsp;Offer</button>
              </div> -->
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <a href="#listing-banner" class="arrow"><span>Scroll Down</span></a>
</section>

<!--end of hero-->

<!-- listing banner -->
<section class="listing-banner row expanded homepage-listings" id="listing-banner">
<div class="columns text-center section-title">
        <h2 class="medium-6 medium-push-3 columns title-list">Homes for Sale</h2>
        <h4 class="medium-12 columns sub-title-list">Inspected and verified, now you can buy with a peace-of-mind</h4>
      </div>
  <% if @properties_p.count <= 2 %>
        <p>No listings available at this moment</p>
  <% else %>
  <div class="medium-12 medium-centered columns" style="
    padding: 0;">
    <div class="row collapse">
      <!-- photo carousel -->
      <div class="medium-10 medium-centered columns">
        <%= render 'properties/_6properties/property_1'%>
        <%= render 'properties/_6properties/property_2'%>
      </div>

    
      <!-- CTA -->
      <div class="row cta text-center">
        <div class="v-align columns">
          <h2>Buy an OpenReal home that youâ€™re guaranteed to love.</h2>
          <a href="<%= listings_path %>#guarantee" class="offer-link" style="font-size: inherit; padding: 0.8em">See All OpenReal Listings</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</section>
<!-- end of listing banner -->

<!-- why -->
<section class="row expanded" id="why">
  <div class="row text-center section-title">
    <h2 class="medium-6 medium-push-3 columns">Your home buying and selling experience. Hassle-free.</h2>
  </div>
  <div class="row collapse">
    <div class="medium-10 medium-centered columns">
      <div class="row">
        <div class="small-12 medium-4 large-4 columns">
          <div class="points">
            <%= image_tag('home-1.svg') %>
            <p class="lead">Your home is sold the moment you're ready</p>
            <p class="subheader">No need to hire an agent, list your home, or wait months for transactions to complete.</p>
          </div>
        </div>
        <div class="small-12 medium-4 large-4 columns">
          <div class="points">
            <%= image_tag('home-2.svg') %>

            <p class="lead">Obtain a fair offer by telling us everything about your home</p>
            <p class="subheader">No need to host countless showings with contracts falling through.</p>
          </div>
        </div>
        <div class="small-12 medium-4 large-4 columns">
          <div class="points">
            <%= image_tag('home-3.svg') %>
            <p class="lead">Move in to your dream home worry-free</p>
            <p class="subheader">All of our listings have certified home inspection and extended coverage warranty.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row text-center section-title">
    <a href="/howitworks" class="offer-link" style="font-size: inherit;">Learn more</a>
  </div>
</section>
<!-- end of why -->

<!-- new listings -->
<!-- end new listings -->

<!-- agents -->
