<div id="actionModalHomeSmall" class="reveal tiny show-for-small-only" data-reveal data-animation-in="fade-in" aria-labelledby="Looking to buy, sell, or are you an agent?" aria-hidden="true" role="dialog">
  <div class="small-modal-img">
  </div>
  <div class="small-modal-logo columns small-6 small-centered">
    <%= image_tag('logo_lg')%>
  </div>
  <div class="text-small">
    <h3>Real Estate, <span><h3>Simplified</h3></span>.</h3>
    <p><small>How can we help you?</small></p>
  </div>

  <div class="row btn-row">
    <button class="columns small-12 button small">
      <a href="/listings">Buy A Home</a>
    </button>
    <button class="columns small-12 button small">
      <a href="<%= new_property_path%>">Sell Your Home</a>
    </button>
    <button class="columns small-12 end button small"> 
      <a href="<%= agents_path%>">List A Client's Home</a>
    </button>
  </div>

</div>

<section class="" id="hero">
  <div class="hero-bg"></div>
  <div class="intro">
    <div class="row expanded second-row-margin">
      <div class="search-bar small-12 medium-8 medium-centered large-8 columns">
      
        <!-- Search field -->
        <%= form_tag (properties_sell_path), id: "addressForm" do %>
          <div class="input-div">
            <div class="title show-for-small-only">
              <h1>Sell Your Home <br /> To <span>OpenReal</span></h1>
            </div>
            <div class="title hide-for-small-only">
              <h1>
                <a class="allhomes" href="/properties/new">Sell Your Home</a>
                to us,
              </h1>
              <h1>
                or browse
                <a class="somehomes" href="/listings">Our Listings</a>.
              </h1>
              <br />
            </div>

            <p id="first-child-title-p" class="hide-for-small-only">Sell your home to OpenReal.</p>
            <p>Skip the stress of showings, uncertainty, and months of negotiations.</p>
            <button class="offer-addressInput"> Get Your Free Offer</button>
            <input type="text" id="addressInput" class="addressInput" placeholder="Enter your home address" name="addressInput">
            <input type="hidden" name="addressFirst" id="addressFirst">
            <input type="hidden" name="addressSecond" id="addressSecond">
            <input type="hidden" name="addressCity" id="addressCity">
            <input type="hidden" name="addressPostal" id="addressPostal">
            <input type="hidden" name="addressLat" id="addressLat">
            <input type="hidden" name="addressLng" id="addressLng">
            <input type="submit" class="hide">

          </div>
        <% end %>
      </div>
    </div>
  </div>
  <a href="#listing-banner" class="arrow"><span>Scroll Down</span></a>
</section>

<section class="row" id="sold-banner">
  <div class="column small-12 medium-4 medium-offset-0 large-3 large-offset-1 sold-bnr-digits">
    <h1><%= @properties_active %></h1>
    <p><a href="/listings" class="hide-for-small-only">active listings</a></p>
    <p class="show-for-small-only">active listings</p>
    <p class="show-for-small-only line-two-mobile"><a href="/howitworks">Learn more about selling!</a></p>
  </div>
  <div class="column show-for-medium medium-8 large-6 large-offset-1 bnr-line-two end">
    <p>OpenReal provides market value for your home and all the flexibility and certainty you need.</p>
    <p><a href="/howitworks">Learn more about selling!</a></p>
  </div>

  
</section>
<!--end of hero-->
<!-- listing banner -->
<section class="listing-banner row expanded homepage-listings" id="listing-banner">
<div class="columns text-center section-title">
      <h2 class="medium-6 medium-push-3 columns title-list">Homes for Sale</h2>
      <h4 class="medium-12 columns sub-title-list">Inspected and verified, now you can buy with a peace-of-mind</h4>
</div>
  <% if @properties_p.count <= 2 %>
        <p>No listings available at this moment</p>
  <% else %>
  <div class="medium-12 medium-centered columns" style="
    padding: 0;">
    <div class="row collapse">
      <!-- photo carousel -->
      <div class="medium-10 medium-centered columns">
        <%= render 'properties/_6properties/property_1'%>
        <%= render 'properties/_6properties/property_2'%>
      </div>

    
      <!-- CTA -->
      <div class="row cta text-center">
        <div class="v-align columns">
          <h2>Buy an OpenReal home that youâ€™re guaranteed to love.</h2>
          <a href="/listings" class="offer-link" style="font-size: inherit; padding: 0.8em">See All OpenReal Listings</a>
